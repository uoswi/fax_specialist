---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import RevealText from '../components/RevealText.astro';
import StatCounter from '../components/StatCounter.astro';
import FadeSection from '../components/FadeSection.astro';

// Get featured case studies
const caseStudies = await getCollection('caseStudies');
const featuredStudies = caseStudies
  .filter(study => study.data.featured)
  .slice(0, 3);
---

<BaseLayout title="Home">
  <!-- Hero Section -->
  <section id="home" class="relative min-h-screen flex items-center overflow-hidden" style="background: #FFFFFF;">
    <!-- Clean background -->
    <div class="absolute inset-0" style="background: linear-gradient(135deg, #FFFFFF 0%, #F8FAFC 50%, #EEF2FF 100%);"></div>
    <!-- Subtle grid -->
    <div class="absolute inset-0 opacity-[0.03]" style="background-image: linear-gradient(#CBD5E1 1px, transparent 1px), linear-gradient(90deg, #CBD5E1 1px, transparent 1px); background-size: 48px 48px;"></div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-20 pb-12 sm:py-24 lg:py-32">
      <div class="grid lg:grid-cols-12 gap-8 lg:gap-12 items-center">
        <!-- Left Column - Content -->
        <div class="lg:col-span-6 xl:col-span-5 text-center lg:text-left">
          <!-- Badge -->
          <div class="inline-flex items-center gap-1.5 sm:gap-2 px-3 sm:px-4 py-1.5 sm:py-2 rounded-full mb-6 sm:mb-8 animate-fade-in-up" style="background-color: #EEF2FF; border: 1px solid #E0E7FF; animation-delay: 0ms;">
            <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4" style="color: #6366F1;" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            <span class="text-xs sm:text-sm font-medium" style="color: #4338CA;">25+ Years Enterprise Fax Experience</span>
          </div>

          <!-- Headline -->
          <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-5xl xl:text-6xl font-display font-bold tracking-tight text-gray-900 mb-5 sm:mb-8">
            <RevealText delay={100}><span class="block">Enterprise Fax.</span></RevealText>
            <RevealText delay={200}><span class="block" style="color: #6366F1;">One Expert.</span></RevealText>
            <RevealText delay={300}><span class="block">Zero Excuses.</span></RevealText>
          </h1>

          <p class="text-base sm:text-lg lg:text-xl text-gray-600 mb-8 sm:mb-10 leading-relaxed animate-fade-in-up max-w-lg mx-auto lg:mx-0" style="animation-delay: 400ms;">
            I'm the single point of accountability for your mission-critical fax infrastructure. No vendor runaround. No offshore support. Just results.
          </p>

          <!-- CTAs -->
          <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 animate-fade-in-up justify-center lg:justify-start" style="animation-delay: 500ms;">
            <a
              href="#contact"
              class="btn-premium group inline-flex items-center justify-center gap-2 sm:gap-3 px-6 sm:px-8 py-3.5 sm:py-4 rounded-xl font-semibold text-base sm:text-lg"
              style="background: linear-gradient(135deg, #6366F1 0%, #4F46E5 100%); color: #ffffff; box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);"
            >
              Let's Talk
              <svg class="btn-arrow w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
            <a
              href="#services"
              class="btn-secondary-premium group inline-flex items-center justify-center gap-2 sm:gap-3 bg-white text-gray-700 border-2 border-gray-200 px-6 sm:px-8 py-3.5 sm:py-4 rounded-xl font-semibold text-base sm:text-lg"
              style="color: #374151;"
            >
              View Services
              <svg class="btn-arrow w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
              </svg>
            </a>
          </div>
        </div>

        <!-- Right Column - Profile Image -->
        <div class="hidden lg:flex lg:col-span-6 xl:col-span-7 lg:justify-center lg:items-center relative animate-fade-in-up" style="animation-delay: 300ms;">
          <div class="relative w-full max-w-sm lg:max-w-md xl:max-w-lg mx-auto">
            <!-- Main image container -->
            <div class="relative aspect-[3/4] rounded-2xl overflow-hidden shadow-2xl">
              <img
                src="https://pub-8328ea6bb04349d1a5a4d426c5086e61.r2.dev/farjad-fani.png"
                alt="Farjad Fani - Enterprise Fax Consultant"
                class="w-full h-full object-cover object-top"
              />
              <!-- Subtle overlay gradient -->
              <div class="absolute inset-0 bg-gradient-to-t from-black/10 to-transparent"></div>
            </div>

            <!-- Floating credibility card - top right -->
            <div class="absolute -top-4 -right-4 bg-white rounded-xl shadow-lg p-4 border border-gray-100 transform hover:scale-105 transition-transform">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-lg flex items-center justify-center" style="background: linear-gradient(135deg, #6366F1 0%, #818CF8 100%);">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <div class="text-xl font-bold text-gray-900">100K+</div>
                  <div class="text-[10px] text-gray-500 uppercase tracking-wider">Customers</div>
                </div>
              </div>
            </div>

            <!-- Floating credibility card - bottom left -->
            <div class="absolute -bottom-4 -left-4 bg-white rounded-xl shadow-lg p-4 border border-gray-100 transform hover:scale-105 transition-transform">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-lg flex items-center justify-center" style="background: linear-gradient(135deg, #10B981 0%, #34D399 100%);">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <div class="text-xl font-bold text-gray-900">HIPAA</div>
                  <div class="text-[10px] text-gray-500 uppercase tracking-wider">Compliant</div>
                </div>
              </div>
            </div>

            <!-- Years badge - positioned better -->
            <div class="absolute top-1/3 -right-8 bg-gradient-to-br from-indigo-600 to-indigo-700 rounded-xl shadow-lg px-4 py-3 text-white transform hover:scale-105 transition-transform">
              <div class="text-2xl font-bold leading-none">25+</div>
              <div class="text-[10px] uppercase tracking-wider opacity-80 mt-1">Years</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 hidden lg:flex flex-col items-center gap-2 text-gray-400">
      <span class="text-xs uppercase tracking-widest">Scroll</span>
      <div class="w-6 h-10 rounded-full border-2 border-gray-300 flex justify-center pt-2">
        <div class="w-1.5 h-3 bg-gray-400 rounded-full animate-bounce"></div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section data-theme="dark" class="relative py-12 sm:py-16 lg:py-20 overflow-hidden" style="background: #0F172A;">
    <!-- Clean grid overlay -->
    <div class="absolute inset-0 opacity-[0.05]" style="background-image: linear-gradient(rgba(255,255,255,1) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,1) 1px, transparent 1px); background-size: 48px 48px;"></div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 sm:gap-8 lg:gap-12">
        <StatCounter end={100000} suffix="+" label="Customers Served">
          <svg slot="icon" class="w-8 h-8" style="color: #818CF8;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </StatCounter>

        <div class="text-center group">
          <div class="inline-flex items-center justify-center w-12 h-12 sm:w-14 sm:h-14 lg:w-16 lg:h-16 rounded-xl sm:rounded-2xl mb-3 sm:mb-4 mx-auto transition-transform group-hover:scale-110" style="background: linear-gradient(135deg, rgba(99, 102, 241, 0.2) 0%, rgba(129, 140, 248, 0.1) 100%); border: 1px solid rgba(99, 102, 241, 0.3);">
            <svg class="w-6 h-6 sm:w-7 sm:h-7 lg:w-8 lg:h-8" style="color: #818CF8;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <div class="text-2xl sm:text-3xl lg:text-4xl xl:text-5xl font-display font-bold mb-1 sm:mb-2" style="background: linear-gradient(135deg, #FFFFFF 0%, #818CF8 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">100%</div>
          <div class="text-xs sm:text-sm text-gray-400 uppercase tracking-wider">HIPAA Compliant</div>
        </div>

        <StatCounter end={10000} suffix="+" label="Active Clients">
          <svg slot="icon" class="w-8 h-8" style="color: #818CF8;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
        </StatCounter>

        <StatCounter end={25} suffix="+" label="Years Experience">
          <svg slot="icon" class="w-8 h-8" style="color: #818CF8;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </StatCounter>
      </div>
    </div>
  </section>

  <!-- Why Me Section -->
  <section id="about" class="relative py-16 sm:py-20 lg:py-32 overflow-hidden" style="background: #FFFFFF;">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-10 sm:mb-16">
        <span class="inline-block px-3 sm:px-4 py-1 sm:py-1.5 rounded-full text-xs sm:text-sm font-medium mb-3 sm:mb-4" style="background-color: #EEF2FF; color: #6366F1;">
          Why Me
        </span>
        <h2 class="text-2xl sm:text-3xl lg:text-4xl font-display font-bold text-gray-900 mb-3 sm:mb-4">You Can Buy Enterprise Fax From a Dozen Vendors</h2>
        <p class="text-lg sm:text-xl text-gray-600 max-w-3xl mx-auto font-medium">
          But you won't get me.
        </p>
      </div>

      <!-- Main Content Grid -->
      <div class="grid lg:grid-cols-2 gap-8 lg:gap-16 items-center mb-12 sm:mb-16">
        <!-- Left: Story -->
        <div class="space-y-6">
          <p class="text-base sm:text-lg text-gray-600 leading-relaxed">
            I've spent 25+ years on both sides of this industry — building infrastructure and advising enterprises on what to buy.
          </p>

          <!-- Credentials -->
          <div class="space-y-4">
            <div class="flex items-start gap-4 p-4 rounded-xl" style="background-color: #F8FAFC;">
              <div class="w-10 h-10 rounded-lg flex items-center justify-center flex-shrink-0" style="background-color: #EEF2FF; color: #6366F1;">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <p class="text-gray-900 font-medium">Built onlinefaxes.com and sold over 100,000 customers to eFax</p>
              </div>
            </div>
            <div class="flex items-start gap-4 p-4 rounded-xl" style="background-color: #F8FAFC;">
              <div class="w-10 h-10 rounded-lg flex items-center justify-center flex-shrink-0" style="background-color: #EEF2FF; color: #6366F1;">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <p class="text-gray-900 font-medium">Now running my own service with 10,000+ active users</p>
              </div>
            </div>
            <div class="flex items-start gap-4 p-4 rounded-xl" style="background-color: #F8FAFC;">
              <div class="w-10 h-10 rounded-lg flex items-center justify-center flex-shrink-0" style="background-color: #EEF2FF; color: #6366F1;">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
              <div>
                <p class="text-gray-900 font-medium">Seen every migration fail, every compliance audit panic, every vendor promise fall apart</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Right: Value Proposition -->
        <div class="relative p-6 sm:p-8 rounded-2xl border" style="background: linear-gradient(to bottom right, #EEF2FF, #FFFFFF); border-color: #E0E7FF;">
          <div class="absolute -top-3 -right-3 w-12 h-12 rounded-full flex items-center justify-center shadow-lg" style="background: linear-gradient(135deg, #6366F1 0%, #4F46E5 100%);">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>
          <h3 class="text-xl sm:text-2xl font-display font-bold text-gray-900 mb-4">What That Means For You</h3>
          <p class="text-base sm:text-lg text-gray-600 mb-6 leading-relaxed">
            I know when vendors are overselling, when an integration will fail, and when you're being quoted three times what you should pay.
          </p>
          <div class="pt-6 border-t border-indigo-100">
            <p class="text-base sm:text-lg text-gray-900 font-medium leading-relaxed">
              Most consultants sell time. <span style="color: #6366F1;">I sell accountability.</span>
            </p>
            <p class="text-sm sm:text-base text-gray-600 mt-3">
              When your fax system fails at 2 AM, I'm not pointing fingers at the vendor — I'm fixing it.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section id="services" class="relative py-16 sm:py-20 lg:py-32 overflow-hidden" style="background: #F8FAFC;">
    <!-- Subtle grid -->
    <div class="absolute inset-0 opacity-[0.04]" style="background-image: linear-gradient(#CBD5E1 1px, transparent 1px), linear-gradient(90deg, #CBD5E1 1px, transparent 1px); background-size: 48px 48px;"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-10 sm:mb-16">
        <span class="inline-block px-3 sm:px-4 py-1 sm:py-1.5 rounded-full text-xs sm:text-sm font-medium mb-3 sm:mb-4" style="background-color: #EEF2FF; color: #6366F1;">
          Services
        </span>
        <h2 class="text-2xl sm:text-3xl lg:text-4xl font-display font-bold text-gray-900 mb-3 sm:mb-4">Enterprise Fax Solutions</h2>
        <p class="text-base sm:text-lg text-gray-600 max-w-2xl mx-auto">
          Whether you're modernizing legacy infrastructure or building from scratch, I'll design the right solution for your organization.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 gap-4 sm:gap-6 lg:gap-8">
        <div class="group bg-white rounded-xl sm:rounded-2xl p-5 sm:p-8 border border-gray-100 shadow-sm hover:shadow-xl transition-all duration-300">
          <div class="w-12 h-12 sm:w-14 sm:h-14 rounded-lg sm:rounded-xl flex items-center justify-center mb-4 sm:mb-6 transition-all duration-300" style="background-color: rgba(99, 102, 241, 0.1); color: #6366F1;">
            <svg class="w-6 h-6 sm:w-7 sm:h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01" />
            </svg>
          </div>
          <h3 class="text-lg sm:text-xl font-display font-semibold text-gray-900 mb-2 sm:mb-3">On-Premise Solutions</h3>
          <p class="text-sm sm:text-base text-gray-600 mb-4 sm:mb-6">Legacy fax servers that need to stay in-house — whether for security, compliance, or pure preference. I'll modernize your RightFax or FaxCore infrastructure without migrating away from what works.</p>
          <div class="flex flex-wrap gap-1.5 sm:gap-2">
            <span class="px-2.5 sm:px-3 py-0.5 sm:py-1 rounded-full text-xs sm:text-sm" style="background-color: #F3F4F6; color: #4B5563;">RightFax</span>
            <span class="px-2.5 sm:px-3 py-0.5 sm:py-1 rounded-full text-xs sm:text-sm" style="background-color: #F3F4F6; color: #4B5563;">FaxCore</span>
            <span class="px-2.5 sm:px-3 py-0.5 sm:py-1 rounded-full text-xs sm:text-sm" style="background-color: #F3F4F6; color: #4B5563;">Full data control</span>
          </div>
        </div>

        <div class="group bg-white rounded-xl sm:rounded-2xl p-5 sm:p-8 border border-gray-100 shadow-sm hover:shadow-xl transition-all duration-300">
          <div class="w-12 h-12 sm:w-14 sm:h-14 rounded-lg sm:rounded-xl flex items-center justify-center mb-4 sm:mb-6" style="background-color: rgba(99, 102, 241, 0.1); color: #6366F1;">
            <svg class="w-6 h-6 sm:w-7 sm:h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z" />
            </svg>
          </div>
          <h3 class="text-lg sm:text-xl font-display font-semibold text-gray-900 mb-2 sm:mb-3">Cloud Fax Solutions</h3>
          <p class="text-sm sm:text-base text-gray-600 mb-4 sm:mb-6">Fully managed, no-hardware fax infrastructure built for scale. I partner directly with etherFAX to deliver enterprise-grade cloud fax with 99.9% uptime — no phone lines, no maintenance.</p>
          <div class="flex flex-wrap gap-1.5 sm:gap-2">
            <span class="px-2.5 sm:px-3 py-0.5 sm:py-1 rounded-full text-xs sm:text-sm" style="background-color: #F3F4F6; color: #4B5563;">etherFAX partner</span>
            <span class="px-2.5 sm:px-3 py-0.5 sm:py-1 rounded-full text-xs sm:text-sm" style="background-color: #F3F4F6; color: #4B5563;">99.9% uptime</span>
            <span class="px-2.5 sm:px-3 py-0.5 sm:py-1 rounded-full text-xs sm:text-sm" style="background-color: #F3F4F6; color: #4B5563;">No hardware</span>
          </div>
        </div>

        <div class="group bg-white rounded-xl sm:rounded-2xl p-5 sm:p-8 border border-gray-100 shadow-sm hover:shadow-xl transition-all duration-300">
          <div class="w-12 h-12 sm:w-14 sm:h-14 rounded-lg sm:rounded-xl flex items-center justify-center mb-4 sm:mb-6" style="background-color: rgba(99, 102, 241, 0.1); color: #6366F1;">
            <svg class="w-6 h-6 sm:w-7 sm:h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
            </svg>
          </div>
          <h3 class="text-lg sm:text-xl font-display font-semibold text-gray-900 mb-2 sm:mb-3">Hybrid & Migration</h3>
          <p class="text-sm sm:text-base text-gray-600 mb-4 sm:mb-6">The real world isn't all-or-nothing. Whether you're phasing out analog lines, moving from RightFax to cloud, or running both indefinitely, I'll design a migration path that keeps you running.</p>
          <div class="flex flex-wrap gap-1.5 sm:gap-2">
            <span class="px-2.5 sm:px-3 py-0.5 sm:py-1 rounded-full text-xs sm:text-sm" style="background-color: #F3F4F6; color: #4B5563;">Zero downtime</span>
            <span class="px-2.5 sm:px-3 py-0.5 sm:py-1 rounded-full text-xs sm:text-sm" style="background-color: #F3F4F6; color: #4B5563;">Phased rollout</span>
          </div>
        </div>

        <div class="group bg-white rounded-xl sm:rounded-2xl p-5 sm:p-8 border border-gray-100 shadow-sm hover:shadow-xl transition-all duration-300">
          <div class="w-12 h-12 sm:w-14 sm:h-14 rounded-lg sm:rounded-xl flex items-center justify-center mb-4 sm:mb-6" style="background-color: rgba(99, 102, 241, 0.1); color: #6366F1;">
            <svg class="w-6 h-6 sm:w-7 sm:h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <h3 class="text-lg sm:text-xl font-display font-semibold text-gray-900 mb-2 sm:mb-3">Automation & Integration</h3>
          <p class="text-sm sm:text-base text-gray-600 mb-4 sm:mb-6">Fax should work inside your workflows, not around them. I build direct integrations with your EHR, EMR, CRM, or ERP — triggered by your rules, logged in your systems.</p>
          <div class="flex flex-wrap gap-1.5 sm:gap-2">
            <span class="px-2.5 sm:px-3 py-0.5 sm:py-1 rounded-full text-xs sm:text-sm" style="background-color: #F3F4F6; color: #4B5563;">EHR/EMR</span>
            <span class="px-2.5 sm:px-3 py-0.5 sm:py-1 rounded-full text-xs sm:text-sm" style="background-color: #F3F4F6; color: #4B5563;">CRM/ERP</span>
            <span class="px-2.5 sm:px-3 py-0.5 sm:py-1 rounded-full text-xs sm:text-sm" style="background-color: #F3F4F6; color: #4B5563;">Custom APIs</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Case Studies Section -->
  {featuredStudies.length > 0 && (
    <section id="results" class="py-24 lg:py-32 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <span class="inline-block px-4 py-1.5 rounded-full text-sm font-medium mb-4" style="background-color: #EEF2FF; color: #6366F1;">
            Results
          </span>
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-gray-900 mb-4">Real Client Success Stories</h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            See how I've helped organizations transform their fax infrastructure.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {featuredStudies.map(study => (
            <div class="bg-gray-50 rounded-2xl p-8 hover:shadow-lg transition-all">
              <div class="text-sm font-medium mb-4" style="color: #6366F1;">{study.data.industry}</div>
              <h3 class="text-xl font-display font-semibold text-gray-900 mb-4">{study.data.title}</h3>
              <p class="text-gray-600 mb-6 text-sm">{study.data.description}</p>
              {study.data.metrics && (
                <div class="grid grid-cols-2 gap-4 pt-4 border-t border-gray-200">
                  {study.data.metrics.slice(0, 2).map(metric => (
                    <div>
                      <div class="text-2xl font-bold" style="color: #6366F1;">{metric.value}</div>
                      <div class="text-xs text-gray-500">{metric.label}</div>
                    </div>
                  ))}
                </div>
              )}
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Contact Section -->
  <section id="contact" data-theme="dark" class="relative py-16 sm:py-20 lg:py-32 overflow-hidden" style="background: #0F172A;">
    <!-- Clean grid overlay -->
    <div class="absolute inset-0 opacity-[0.05]" style="background-image: linear-gradient(rgba(255,255,255,1) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,1) 1px, transparent 1px); background-size: 48px 48px;"></div>

    <div class="relative max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-10 lg:gap-16 items-center">
        <!-- Left Column - Text -->
        <div class="text-center lg:text-left">
          <span class="inline-block px-3 sm:px-4 py-1 sm:py-1.5 rounded-full text-xs sm:text-sm font-medium mb-4 sm:mb-6" style="background-color: rgba(99, 102, 241, 0.2); color: #818CF8; border: 1px solid rgba(99, 102, 241, 0.3);">
            Get in Touch
          </span>
          <h2 class="text-3xl sm:text-4xl lg:text-5xl font-display font-bold mb-4 sm:mb-6 leading-tight">
            <span class="text-white">Let's Skip the</span><br/>
            <span style="background: linear-gradient(135deg, #818CF8 0%, #A78BFA 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">Discovery Call</span>
          </h2>
          <p class="text-base sm:text-lg text-gray-400 mb-4 leading-relaxed">
            If you're here, you're probably already frustrated. Let's fix that.
          </p>
          <p class="text-base sm:text-lg text-gray-400 mb-6 sm:mb-8 leading-relaxed">
            Send me a quick message. I'll reply personally (not a VA, not a chatbot) with a few questions or a recommendation. No forms, no sales funnel.
          </p>

          <!-- Trust indicators -->
          <div class="space-y-3 sm:space-y-4 hidden sm:block">
            <div class="flex items-center gap-3 text-gray-300">
              <div class="w-10 h-10 rounded-lg flex items-center justify-center" style="background-color: rgba(99, 102, 241, 0.15);">
                <svg class="w-5 h-5" style="color: #818CF8;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
              <span>Personal reply from me, not a VA</span>
            </div>
            <div class="flex items-center gap-3 text-gray-300">
              <div class="w-10 h-10 rounded-lg flex items-center justify-center" style="background-color: rgba(99, 102, 241, 0.15);">
                <svg class="w-5 h-5" style="color: #818CF8;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <span>Response within 24 hours</span>
            </div>
            <div class="flex items-center gap-3 text-gray-300 justify-center lg:justify-start">
              <div class="w-10 h-10 rounded-lg flex items-center justify-center" style="background-color: rgba(99, 102, 241, 0.15);">
                <svg class="w-5 h-5" style="color: #818CF8;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <span>No obligation, no sales funnel</span>
            </div>
          </div>
        </div>

        <!-- Right Column - Form Card -->
        <div class="relative">
          <!-- Form Card -->
          <div class="relative bg-white/5 backdrop-blur-xl rounded-xl sm:rounded-2xl p-5 sm:p-8 border border-white/10 shadow-2xl">
            <!-- Glow effect -->
            <div class="absolute -inset-1 bg-gradient-to-r from-indigo-500/20 to-purple-500/20 rounded-xl sm:rounded-2xl blur-xl opacity-50"></div>

            <form id="contact-form" class="relative space-y-4 sm:space-y-5">
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div>
                  <label for="name" class="block text-xs sm:text-sm font-medium text-gray-300 mb-1.5 sm:mb-2">Name *</label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="w-full px-3 sm:px-4 py-2.5 sm:py-3 rounded-lg sm:rounded-xl bg-white/10 border border-white/20 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500/50 focus:border-transparent transition-all text-sm sm:text-base"
                    placeholder="John Smith"
                  />
                </div>
                <div>
                  <label for="email" class="block text-xs sm:text-sm font-medium text-gray-300 mb-1.5 sm:mb-2">Email *</label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-3 sm:px-4 py-2.5 sm:py-3 rounded-lg sm:rounded-xl bg-white/10 border border-white/20 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500/50 focus:border-transparent transition-all text-sm sm:text-base"
                    placeholder="john@company.com"
                  />
                </div>
              </div>
              <div>
                <label for="company" class="block text-xs sm:text-sm font-medium text-gray-300 mb-1.5 sm:mb-2">Company</label>
                <input
                  type="text"
                  id="company"
                  name="company"
                  class="w-full px-3 sm:px-4 py-2.5 sm:py-3 rounded-lg sm:rounded-xl bg-white/10 border border-white/20 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500/50 focus:border-transparent transition-all text-sm sm:text-base"
                  placeholder="Your company name"
                />
              </div>
              <div>
                <label for="message" class="block text-xs sm:text-sm font-medium text-gray-300 mb-1.5 sm:mb-2">How can I help? *</label>
                <textarea
                  id="message"
                  name="message"
                  rows="3"
                  required
                  class="w-full px-3 sm:px-4 py-2.5 sm:py-3 rounded-lg sm:rounded-xl bg-white/10 border border-white/20 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500/50 focus:border-transparent transition-all resize-none text-sm sm:text-base"
                  placeholder="Tell me about your fax challenges..."
                ></textarea>
              </div>
              <button
                type="submit"
                id="submit-btn"
                class="btn-premium w-full py-3 sm:py-4 rounded-lg sm:rounded-xl font-semibold text-base sm:text-lg group"
                style="background: linear-gradient(135deg, #6366F1 0%, #4F46E5 100%); color: #ffffff; box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);"
              >
                <span id="btn-text" class="flex items-center justify-center gap-2">
                  Send Message
                  <svg class="btn-arrow w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                  </svg>
                </span>
                <span id="btn-loading" class="hidden flex items-center justify-center gap-2">
                  <svg class="animate-spin w-5 h-5" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                  Sending...
                </span>
              </button>
              <!-- Success Message -->
              <div id="form-success" class="hidden text-center py-4">
                <div class="inline-flex items-center gap-2 text-green-400">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span class="font-medium">Message sent! I'll get back to you within 24 hours.</span>
                </div>
              </div>
              <!-- Error Message -->
              <div id="form-error" class="hidden text-center py-4">
                <div class="inline-flex items-center gap-2 text-red-400">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span class="font-medium">Something went wrong. Please try again or email me directly.</span>
                </div>
              </div>
            </form>

            <script>
              const form = document.getElementById('contact-form');
              const submitBtn = document.getElementById('submit-btn');
              const btnText = document.getElementById('btn-text');
              const btnLoading = document.getElementById('btn-loading');
              const formSuccess = document.getElementById('form-success');
              const formError = document.getElementById('form-error');

              form?.addEventListener('submit', async (e) => {
                e.preventDefault();

                // Reset states
                formSuccess?.classList.add('hidden');
                formError?.classList.add('hidden');
                btnText?.classList.add('hidden');
                btnLoading?.classList.remove('hidden');
                if (submitBtn) submitBtn.disabled = true;

                const formData = new FormData(form);
                const data = {
                  name: formData.get('name'),
                  email: formData.get('email'),
                  company: formData.get('company') || '',
                  message: formData.get('message'),
                  submittedAt: new Date().toISOString()
                };

                try {
                  const response = await fetch('/api/contact', {
                    method: 'POST',
                    headers: {
                      'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                  });

                  if (response.ok) {
                    formSuccess?.classList.remove('hidden');
                    form.reset();
                  } else {
                    throw new Error('Failed to submit');
                  }
                } catch (error) {
                  formError?.classList.remove('hidden');
                } finally {
                  btnText?.classList.remove('hidden');
                  btnLoading?.classList.add('hidden');
                  if (submitBtn) submitBtn.disabled = false;
                }
              });
            </script>
          </div>
        </div>
      </div>
    </div>
  </section>

</BaseLayout>

