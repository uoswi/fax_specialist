---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import RevealText from '../components/RevealText.astro';
import StatCounter from '../components/StatCounter.astro';
import FadeSection from '../components/FadeSection.astro';

// Get featured case studies
const caseStudies = await getCollection('caseStudies');
const featuredStudies = caseStudies
  .filter(study => study.data.featured)
  .slice(0, 3);
---

<BaseLayout title="Home">
  <!-- Hero Section -->
  <section id="home" class="relative min-h-screen flex items-center overflow-hidden" style="background: linear-gradient(180deg, #FAFBFC 0%, #FFFFFF 50%, #F8FAFC 100%);">
    <!-- Background Elements - Refined Mesh Gradient -->
    <div class="absolute inset-0 overflow-hidden">
      <!-- Sophisticated layered gradients -->
      <div class="absolute top-0 right-0 w-full h-full" style="background: radial-gradient(ellipse 80% 60% at 70% 20%, rgba(224, 231, 255, 0.5) 0%, transparent 50%);"></div>
      <div class="absolute bottom-0 left-0 w-full h-full" style="background: radial-gradient(ellipse 60% 50% at 20% 80%, rgba(199, 210, 254, 0.3) 0%, transparent 40%);"></div>
      <!-- Subtle accent glow -->
      <div class="absolute top-1/4 right-1/4 w-[600px] h-[600px] rounded-full blur-[120px] opacity-20" style="background: linear-gradient(135deg, #818CF8 0%, #A5B4FC 100%);"></div>
      <!-- Refined dot pattern -->
      <div class="absolute inset-0 opacity-[0.03]" style="background-image: radial-gradient(circle at 1px 1px, #6366F1 1px, transparent 0); background-size: 32px 32px;"></div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 lg:py-32">
      <div class="grid lg:grid-cols-12 gap-8 lg:gap-12 items-center">
        <!-- Left Column - Content -->
        <div class="lg:col-span-6 xl:col-span-5">
          <!-- Badge -->
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full mb-8 animate-fade-in-up" style="background-color: #EEF2FF; border: 1px solid #E0E7FF; animation-delay: 0ms;">
            <svg class="w-4 h-4" style="color: #6366F1;" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            <span class="text-sm font-medium" style="color: #4338CA;">25+ Years Enterprise Fax Experience</span>
          </div>

          <!-- Headline -->
          <h1 class="text-4xl sm:text-5xl lg:text-5xl xl:text-6xl font-display font-bold tracking-tight text-gray-900 mb-8">
            <RevealText delay={100}><span class="block">Enterprise Fax.</span></RevealText>
            <RevealText delay={200}><span class="block" style="color: #6366F1;">One Expert.</span></RevealText>
            <RevealText delay={300}><span class="block">Zero Excuses.</span></RevealText>
          </h1>

          <p class="text-lg lg:text-xl text-gray-600 mb-10 leading-relaxed animate-fade-in-up" style="animation-delay: 400ms;">
            I'm the single point of accountability for your mission-critical fax infrastructure. No vendor runaround. No offshore support. Just results.
          </p>

          <!-- CTAs -->
          <div class="flex flex-col sm:flex-row gap-4 animate-fade-in-up" style="animation-delay: 500ms;">
            <a
              href="#contact"
              class="btn-premium group inline-flex items-center justify-center gap-3 px-8 py-4 rounded-xl font-semibold text-lg"
              style="background: linear-gradient(135deg, #6366F1 0%, #4F46E5 100%); color: #ffffff; box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);"
            >
              Let's Talk
              <svg class="btn-arrow w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
            <a
              href="#services"
              class="btn-secondary-premium group inline-flex items-center justify-center gap-3 bg-white text-gray-700 border-2 border-gray-200 px-8 py-4 rounded-xl font-semibold text-lg"
              style="color: #374151;"
            >
              View Services
              <svg class="btn-arrow w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
              </svg>
            </a>
          </div>
        </div>

        <!-- Right Column - Image Placeholder -->
        <div class="hidden lg:flex lg:col-span-6 xl:col-span-7 lg:justify-center lg:items-center relative animate-fade-in-up" style="animation-delay: 300ms;">
          <!-- Professional Image Placeholder -->
          <div class="relative w-full max-w-sm lg:max-w-md xl:max-w-lg mx-auto">
            <!-- Main image container -->
            <div class="relative aspect-[3/4] rounded-2xl overflow-hidden shadow-2xl" style="background: linear-gradient(135deg, #1E293B 0%, #334155 50%, #1E293B 100%);">
              <!-- Placeholder content -->
              <div class="absolute inset-0 flex flex-col items-center justify-center">
                <div class="w-28 h-28 rounded-full mb-5 flex items-center justify-center" style="background: linear-gradient(135deg, #6366F1 0%, #818CF8 100%);">
                  <svg class="w-14 h-14 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                </div>
                <span class="text-white/80 text-sm font-medium">Professional Headshot</span>
                <span class="text-white/50 text-xs mt-1">Your Photo Here</span>
              </div>

              <!-- Overlay gradient -->
              <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
            </div>

            <!-- Floating credibility card - top right -->
            <div class="absolute -top-4 -right-4 bg-white rounded-xl shadow-lg p-4 border border-gray-100 transform hover:scale-105 transition-transform">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-lg flex items-center justify-center" style="background: linear-gradient(135deg, #6366F1 0%, #818CF8 100%);">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <div class="text-xl font-bold text-gray-900">100K+</div>
                  <div class="text-[10px] text-gray-500 uppercase tracking-wider">Customers</div>
                </div>
              </div>
            </div>

            <!-- Floating credibility card - bottom left -->
            <div class="absolute -bottom-4 -left-4 bg-white rounded-xl shadow-lg p-4 border border-gray-100 transform hover:scale-105 transition-transform">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-lg flex items-center justify-center" style="background: linear-gradient(135deg, #10B981 0%, #34D399 100%);">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <div class="text-xl font-bold text-gray-900">eFax</div>
                  <div class="text-[10px] text-gray-500 uppercase tracking-wider">Exit</div>
                </div>
              </div>
            </div>

            <!-- Years badge - positioned better -->
            <div class="absolute top-1/3 -right-8 bg-gradient-to-br from-indigo-600 to-indigo-700 rounded-xl shadow-lg px-4 py-3 text-white transform hover:scale-105 transition-transform">
              <div class="text-2xl font-bold leading-none">25+</div>
              <div class="text-[10px] uppercase tracking-wider opacity-80 mt-1">Years</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 hidden lg:flex flex-col items-center gap-2 text-gray-400">
      <span class="text-xs uppercase tracking-widest">Scroll</span>
      <div class="w-6 h-10 rounded-full border-2 border-gray-300 flex justify-center pt-2">
        <div class="w-1.5 h-3 bg-gray-400 rounded-full animate-bounce"></div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section data-theme="dark" class="relative py-20 overflow-hidden" style="background: linear-gradient(180deg, #0F172A 0%, #111827 50%, #0F172A 100%);">
    <!-- Refined decorative elements -->
    <div class="absolute inset-0">
      <div class="absolute inset-0" style="background: radial-gradient(ellipse 100% 80% at 50% -20%, rgba(99, 102, 241, 0.15) 0%, transparent 50%);"></div>
      <div class="absolute inset-0" style="background: radial-gradient(ellipse 80% 60% at 20% 100%, rgba(129, 140, 248, 0.08) 0%, transparent 40%);"></div>
      <!-- Subtle line grid -->
      <div class="absolute inset-0 opacity-[0.03]" style="background-image: linear-gradient(rgba(255,255,255,0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,0.1) 1px, transparent 1px); background-size: 60px 60px;"></div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
        <StatCounter end={100000} suffix="+" label="Customers Served">
          <svg slot="icon" class="w-8 h-8" style="color: #818CF8;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </StatCounter>

        <div class="text-center group">
          <div class="inline-flex items-center justify-center w-16 h-16 rounded-2xl mb-4 mx-auto transition-transform group-hover:scale-110" style="background: linear-gradient(135deg, rgba(99, 102, 241, 0.2) 0%, rgba(129, 140, 248, 0.1) 100%); border: 1px solid rgba(99, 102, 241, 0.3);">
            <svg class="w-8 h-8" style="color: #818CF8;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="text-4xl lg:text-5xl font-display font-bold mb-2" style="background: linear-gradient(135deg, #FFFFFF 0%, #818CF8 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">eFax</div>
          <div class="text-sm text-gray-400 uppercase tracking-wider">Enterprise Exit</div>
        </div>

        <StatCounter end={10000} suffix="+" label="Active Clients">
          <svg slot="icon" class="w-8 h-8" style="color: #818CF8;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
        </StatCounter>

        <StatCounter end={25} suffix="+" label="Years Experience">
          <svg slot="icon" class="w-8 h-8" style="color: #818CF8;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </StatCounter>
      </div>
    </div>
  </section>

  <!-- Problem/Solution Section -->
  <section id="about" class="relative py-24 lg:py-32 overflow-hidden" style="background: linear-gradient(180deg, #FFFFFF 0%, #FAFBFC 100%);">
    <!-- Subtle radial accent -->
    <div class="absolute inset-0" style="background: radial-gradient(ellipse 80% 40% at 50% 100%, rgba(238, 242, 255, 0.4) 0%, transparent 50%);"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <span class="inline-block px-4 py-1.5 rounded-full text-sm font-medium mb-4" style="background-color: #F3F4F6; color: #4B5563;">
          The Problem
        </span>
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-gray-900 mb-4">Sound Familiar?</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Enterprise fax shouldn't be this hard. Here's what I hear from IT leaders every week.
        </p>
      </div>

      <!-- Problems -->
      <div class="grid md:grid-cols-3 gap-6 mb-20">
        <div class="bg-white p-8 rounded-2xl border border-red-100 shadow-sm">
          <div class="w-14 h-14 rounded-xl flex items-center justify-center mb-6" style="background-color: #FEF2F2; color: #EF4444;">
            <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
          </div>
          <h3 class="text-xl font-display font-semibold text-gray-900 mb-3">Vendor Runaround</h3>
          <p class="text-gray-600">Tired of being bounced between sales, support, and account managers who don't know your setup?</p>
        </div>
        <div class="bg-white p-8 rounded-2xl border border-orange-100 shadow-sm">
          <div class="w-14 h-14 rounded-xl flex items-center justify-center mb-6" style="background-color: #FFF7ED; color: #F97316;">
            <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
          </div>
          <h3 class="text-xl font-display font-semibold text-gray-900 mb-3">Offshore Support</h3>
          <p class="text-gray-600">Fed up with support teams that can't understand your compliance requirements or technical needs?</p>
        </div>
        <div class="bg-white p-8 rounded-2xl border border-amber-100 shadow-sm">
          <div class="w-14 h-14 rounded-xl flex items-center justify-center mb-6" style="background-color: #FFFBEB; color: #F59E0B;">
            <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
          </div>
          <h3 class="text-xl font-display font-semibold text-gray-900 mb-3">No Accountability</h3>
          <p class="text-gray-600">Struggling to find someone who will actually own the problem when faxes fail at 2 AM?</p>
        </div>
      </div>

      <!-- Arrow -->
      <div class="flex justify-center mb-20">
        <div class="flex flex-col items-center">
          <div class="w-px h-16" style="background: linear-gradient(to bottom, #E5E7EB, #6366F1);"></div>
          <div class="w-12 h-12 rounded-full flex items-center justify-center shadow-lg" style="background-color: #6366F1;">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
            </svg>
          </div>
        </div>
      </div>

      <!-- Solution Header -->
      <div class="text-center mb-16">
        <span class="inline-block px-4 py-1.5 rounded-full text-sm font-medium mb-4" style="background-color: #EEF2FF; color: #6366F1;">
          The Solution
        </span>
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-gray-900 mb-4">Here's How I'm Different</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          25+ years of enterprise fax experience, distilled into one direct relationship.
        </p>
      </div>

      <!-- Solutions -->
      <div class="grid md:grid-cols-3 gap-6">
        <div class="relative p-8 rounded-2xl border shadow-sm" style="background: linear-gradient(to bottom right, #EEF2FF, #FFFFFF); border-color: #E0E7FF;">
          <div class="absolute -top-3 -left-3 w-10 h-10 rounded-full flex items-center justify-center font-bold shadow-lg" style="background-color: #6366F1; color: #ffffff;">1</div>
          <div class="w-14 h-14 rounded-xl flex items-center justify-center mb-6" style="background-color: rgba(99, 102, 241, 0.1); color: #6366F1;">
            <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <h3 class="text-xl font-display font-semibold text-gray-900 mb-3">One Expert</h3>
          <p class="text-gray-600">Direct access to someone who's built, scaled, and sold fax infrastructure. No layers, no runaround.</p>
        </div>
        <div class="relative p-8 rounded-2xl border shadow-sm" style="background: linear-gradient(to bottom right, #EEF2FF, #FFFFFF); border-color: #E0E7FF;">
          <div class="absolute -top-3 -left-3 w-10 h-10 rounded-full flex items-center justify-center font-bold shadow-lg" style="background-color: #6366F1; color: #ffffff;">2</div>
          <div class="w-14 h-14 rounded-xl flex items-center justify-center mb-6" style="background-color: rgba(99, 102, 241, 0.1); color: #6366F1;">
            <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <h3 class="text-xl font-display font-semibold text-gray-900 mb-3">Deep Expertise</h3>
          <p class="text-gray-600">HIPAA, SOC2, enterprise compliance â€” I've done it for banks, hospitals, and government agencies.</p>
        </div>
        <div class="relative p-8 rounded-2xl border shadow-sm" style="background: linear-gradient(to bottom right, #EEF2FF, #FFFFFF); border-color: #E0E7FF;">
          <div class="absolute -top-3 -left-3 w-10 h-10 rounded-full flex items-center justify-center font-bold shadow-lg" style="background-color: #6366F1; color: #ffffff;">3</div>
          <div class="w-14 h-14 rounded-xl flex items-center justify-center mb-6" style="background-color: rgba(99, 102, 241, 0.1); color: #6366F1;">
            <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <h3 class="text-xl font-display font-semibold text-gray-900 mb-3">Results, Not Promises</h3>
          <p class="text-gray-600">I've helped enterprises cut fax costs by 60% while improving reliability. Let's do it for you.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section id="services" class="relative py-24 lg:py-32 overflow-hidden" style="background: linear-gradient(180deg, #F8FAFC 0%, #F1F5F9 50%, #F8FAFC 100%);">
    <!-- Subtle background texture -->
    <div class="absolute inset-0" style="background: radial-gradient(ellipse 100% 50% at 50% 0%, rgba(224, 231, 255, 0.3) 0%, transparent 50%);"></div>
    <div class="absolute inset-0 opacity-[0.02]" style="background-image: radial-gradient(circle at 1px 1px, #64748B 1px, transparent 0); background-size: 24px 24px;"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <span class="inline-block px-4 py-1.5 rounded-full text-sm font-medium mb-4" style="background-color: #EEF2FF; color: #6366F1;">
          Services
        </span>
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-gray-900 mb-4">Enterprise Fax Solutions</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          From legacy migrations to cloud-native deployments, I help enterprises modernize their fax infrastructure.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        <div class="group bg-white rounded-2xl p-8 border border-gray-100 shadow-sm hover:shadow-xl transition-all duration-300">
          <div class="w-14 h-14 rounded-xl flex items-center justify-center mb-6 transition-all duration-300" style="background-color: rgba(99, 102, 241, 0.1); color: #6366F1;">
            <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01" />
            </svg>
          </div>
          <h3 class="text-xl font-display font-semibold text-gray-900 mb-3">On-Premise Solutions</h3>
          <p class="text-gray-600 mb-6">Legacy modernization and in-house fax infrastructure for security-first organizations.</p>
          <div class="flex flex-wrap gap-2">
            <span class="px-3 py-1 rounded-full text-sm" style="background-color: #F3F4F6; color: #4B5563;">RightFax expertise</span>
            <span class="px-3 py-1 rounded-full text-sm" style="background-color: #F3F4F6; color: #4B5563;">Full data control</span>
          </div>
        </div>

        <div class="group bg-white rounded-2xl p-8 border border-gray-100 shadow-sm hover:shadow-xl transition-all duration-300">
          <div class="w-14 h-14 rounded-xl flex items-center justify-center mb-6" style="background-color: rgba(99, 102, 241, 0.1); color: #6366F1;">
            <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z" />
            </svg>
          </div>
          <h3 class="text-xl font-display font-semibold text-gray-900 mb-3">Cloud Fax Solutions</h3>
          <p class="text-gray-600 mb-6">Scalable, no-hardware fax infrastructure with global reach for modern enterprises.</p>
          <div class="flex flex-wrap gap-2">
