---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const caseStudies = await getCollection('caseStudies');
const sortedStudies = caseStudies.sort(
  (a, b) => new Date(b.data.publishedDate).getTime() - new Date(a.data.publishedDate).getTime()
);

// Group by industry
const industries = [...new Set(caseStudies.map(s => s.data.industry))];
---

<BaseLayout
  title="Case Studies"
  description="Real-world enterprise fax implementations across healthcare, logistics, finance, and more. See measurable results from actual projects."
>
  <!-- Hero Section -->
  <section class="bg-obsidian py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <nav class="text-sm mb-8">
        <a href="/resources" class="text-silver hover:text-white">Resources</a>
        <span class="text-silver mx-2">/</span>
        <span class="text-white">Case Studies</span>
      </nav>

      <h1 class="text-4xl md:text-5xl font-display font-bold text-white mb-6">
        Case Studies
      </h1>
      <p class="text-xl text-silver max-w-3xl">
        Real implementations, real results. Every case study includes specific challenges faced, solutions implemented, and measurable outcomes achieved.
      </p>
    </div>
  </section>

  <!-- Filter Pills -->
  <section class="bg-white border-b border-cloud py-4 sticky top-0 z-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center gap-3 overflow-x-auto pb-2">
        <span class="text-sm text-graphite font-medium whitespace-nowrap">Filter by industry:</span>
        <button class="px-4 py-2 text-sm font-medium bg-indigo text-white rounded-full" data-filter="all">
          All
        </button>
        {industries.map(industry => (
          <button
            class="px-4 py-2 text-sm font-medium text-graphite bg-mist rounded-full hover:bg-cloud transition-colors whitespace-nowrap"
            data-filter={industry}
          >
            {industry}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- Case Studies Grid -->
  <section class="py-16 bg-mist">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8" id="case-studies-grid">
        {sortedStudies.map(study => (
          <article
            class="case-study-card group bg-white rounded-xl overflow-hidden hover:shadow-xl transition-all duration-300"
            data-industry={study.data.industry}
          >
            <div class="p-6">
              <div class="flex items-center justify-between mb-4">
                <span class="text-sm text-indigo font-medium">{study.data.industry}</span>
                {study.data.featured && (
                  <span class="text-xs bg-indigo/10 text-indigo px-2 py-1 rounded-full">Featured</span>
                )}
              </div>

              <h2 class="text-xl font-display font-semibold text-obsidian mb-3 group-hover:text-indigo transition-colors">
                <a href={`/resources/case-studies/${study.id}`} class="block">
                  {study.data.title}
                </a>
              </h2>

              <p class="text-graphite text-sm mb-6 line-clamp-3">
                {study.data.description}
              </p>

              {study.data.metrics && (
                <div class="grid grid-cols-3 gap-4 pt-4 border-t border-cloud">
                  {study.data.metrics.slice(0, 3).map(metric => (
                    <div class="text-center">
                      <div class="text-lg font-bold text-indigo">{metric.value}</div>
                      <div class="text-xs text-graphite">{metric.label}</div>
                    </div>
                  ))}
                </div>
              )}
            </div>

            <a
              href={`/resources/case-studies/${study.id}`}
              class="block bg-mist px-6 py-4 text-sm font-medium text-indigo hover:bg-indigo hover:text-white transition-colors"
            >
              Read full case study â†’
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl font-display font-bold text-obsidian mb-4">
        Ready to Become Our Next Success Story?
      </h2>
      <p class="text-graphite mb-8">
        Let's discuss how we can solve your enterprise fax challenges.
      </p>
      <a href="/contact" class="inline-flex items-center px-6 py-3 bg-indigo text-white font-semibold rounded-lg hover:bg-indigo-dark transition-colors">
        Start a Conversation
      </a>
    </div>
  </section>
</BaseLayout>

<script>
  // Simple client-side filtering
  document.addEventListener('DOMContentLoaded', () => {
    const buttons = document.querySelectorAll('[data-filter]');
    const cards = document.querySelectorAll('.case-study-card');

    buttons.forEach(button => {
      button.addEventListener('click', () => {
        const filter = button.getAttribute('data-filter');

        // Update button styles
        buttons.forEach(btn => {
          btn.classList.remove('bg-indigo', 'text-white');
          btn.classList.add('text-graphite', 'bg-mist');
        });
        button.classList.remove('text-graphite', 'bg-mist');
        button.classList.add('bg-indigo', 'text-white');

        // Filter cards
        cards.forEach(card => {
          const industry = card.getAttribute('data-industry');
          if (filter === 'all' || industry === filter) {
            card.style.display = 'block';
          } else {
            card.style.display = 'none';
          }
        });
      });
    });
  });
</script>
