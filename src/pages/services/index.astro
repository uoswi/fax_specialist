---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ServiceCard from '../../components/ServiceCard.astro';

const services = [
  {
    title: "On-Premise Solutions",
    description: "Legacy modernization and in-house fax infrastructure for security-first organizations that need full control over their data and systems.",
    href: "/services/on-premise",
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01" /></svg>`
  },
  {
    title: "Cloud Fax Solutions",
    description: "Scalable, no-hardware fax infrastructure with global reach. Perfect for distributed teams and modern enterprises looking to eliminate physical infrastructure.",
    href: "/services/cloud",
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z" /></svg>`
  },
  {
    title: "Hybrid & Migration",
    description: "Smooth transitions from legacy to cloud with phased migration plans that minimize risk, ensure compliance, and eliminate downtime.",
    href: "/services/hybrid-migration",
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" /></svg>`
  },
  {
    title: "Automation & Integration",
    description: "Workflow automation, API integrations, and custom triggers that connect fax to your existing EHR, ERP, and document management systems.",
    href: "/services/automation",
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /></svg>`
  }
];
---

<BaseLayout
  title="Services"
  description="Enterprise fax consulting services: on-premise solutions, cloud fax, hybrid migrations, and workflow automation."
>
  <!-- Hero -->
  <section class="bg-gradient-to-b from-slate to-obsidian py-20 lg:py-28">
    <div class="max-w-[1200px] mx-auto px-6 text-center">
      <p class="text-indigo-light font-medium text-small uppercase tracking-wider mb-3">
        What I Do
      </p>
      <h1 class="font-headline text-h1 lg:text-display text-pearl mb-6">
        Enterprise Fax Services
      </h1>
      <p class="text-body-lg text-steel max-w-2xl mx-auto">
        From legacy infrastructure modernization to cloud-native deployments,
        I help enterprises transform their fax operations.
      </p>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="py-20 bg-ivory">
    <div class="max-w-[1200px] mx-auto px-6">
      <div class="grid md:grid-cols-2 gap-8">
        {services.map((service) => (
          <ServiceCard
            title={service.title}
            description={service.description}
            href={service.href}
            icon={service.icon}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="py-20 bg-pearl">
    <div class="max-w-[1200px] mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="font-headline text-h1 mb-4">How I Work</h2>
        <p class="text-body-lg text-steel max-w-2xl mx-auto">
          A straightforward process designed to get you results without the typical vendor runaround.
        </p>
      </div>

      <div class="grid md:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="w-14 h-14 rounded-full bg-indigo text-pearl flex items-center justify-center mx-auto mb-4 font-headline text-h3">
            1
          </div>
          <h3 class="font-headline text-h4 mb-2">Discovery</h3>
          <p class="text-steel text-small">Understand your current setup, pain points, and goals</p>
        </div>
        <div class="text-center">
          <div class="w-14 h-14 rounded-full bg-indigo text-pearl flex items-center justify-center mx-auto mb-4 font-headline text-h3">
            2
          </div>
          <h3 class="font-headline text-h4 mb-2">Strategy</h3>
          <p class="text-steel text-small">Design a solution that fits your budget and timeline</p>
        </div>
        <div class="text-center">
          <div class="w-14 h-14 rounded-full bg-indigo text-pearl flex items-center justify-center mx-auto mb-4 font-headline text-h3">
            3
          </div>
          <h3 class="font-headline text-h4 mb-2">Implementation</h3>
          <p class="text-steel text-small">Execute the plan with minimal disruption to operations</p>
        </div>
        <div class="text-center">
          <div class="w-14 h-14 rounded-full bg-indigo text-pearl flex items-center justify-center mx-auto mb-4 font-headline text-h3">
            4
          </div>
          <h3 class="font-headline text-h4 mb-2">Support</h3>
          <p class="text-steel text-small">Ongoing monitoring and optimization</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-ivory">
    <div class="max-w-[1200px] mx-auto px-6 text-center">
      <h2 class="font-headline text-h2 mb-4">Not sure which service you need?</h2>
      <p class="text-body-lg text-steel mb-8 max-w-xl mx-auto">
        Let's talk through your situation. I'll give you an honest assessmentâ€”even if I'm not the right fit.
      </p>
      <a
        href="/contact"
        class="inline-flex items-center gap-2 bg-indigo text-pearl px-8 py-4 rounded-sm font-medium hover:bg-indigo-dark transition-colors"
      >
        Schedule a Free Consultation
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </section>
</BaseLayout>
