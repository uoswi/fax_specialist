---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ServicePageLayout from '../../components/ServicePageLayout.astro';

const pageData = {
  title: "On-Premise Solutions",
  subtitle: "Full Control",
  description: "For organizations that need complete control over their fax infrastructure. I help you modernize legacy systems, optimize existing hardware, and implement enterprise-grade on-premise fax servers that meet the strictest security and compliance requirements.",
  icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01" /></svg>`,
  whoItsFor: [
    "Banks and financial institutions with strict data residency requirements",
    "Healthcare systems that need air-gapped fax infrastructure",
    "Government agencies with classified document handling",
    "Organizations with existing RightFax or FaxCore investments",
    "Enterprises that can't use cloud due to regulatory constraints"
  ],
  howIHelp: [
    "Audit and optimize existing on-premise fax infrastructure",
    "Design and implement new fax server deployments",
    "Migrate from end-of-life systems to modern on-premise solutions",
    "Configure high-availability and disaster recovery setups",
    "Integrate with existing PBX, email, and document management systems",
    "Provide ongoing monitoring and support"
  ],
  technologies: [
    { name: "OpenText RightFax", description: "Enterprise-grade fax server with deep integration capabilities" },
    { name: "FaxCore", description: "Flexible on-premise solution with strong API support" },
    { name: "Equisys Zetafax", description: "Reliable Windows-based fax server" },
    { name: "GFI FaxMaker", description: "Cost-effective solution for SMB and mid-market" },
    { name: "Dialogic Brooktrout", description: "High-density fax boards for maximum throughput" },
    { name: "Cantata (Sangoma)", description: "VoIP-enabled fax solutions" }
  ],
  certifications: ["HIPAA", "SOC 2 Type II", "PCI DSS", "FISMA", "FedRAMP"]
};
---

<BaseLayout
  title={pageData.title}
  description={pageData.description}
>
  <ServicePageLayout {...pageData} />
</BaseLayout>
