    "Financial services automating document workflows",
    "Legal firms with high-volume fax processing needs",
    "Any organization manually routing or processing faxes",
    "Businesses looking to add OCR and intelligent document processing"
  ],
  howIHelp: [
    "Analyze existing workflows and identify automation opportunities",
    "Design and implement API integrations with EHR, ERP, and CRM systems",
    "Build custom routing rules based on content, sender, or metadata",
    "Implement OCR and intelligent document recognition",
    "Create automated notifications and escalation workflows",
    "Set up audit trails and compliance reporting"
  ],
  technologies: [
    { name: "Epic/Cerner Integration", description: "Direct EHR fax integration for healthcare" },
    { name: "Salesforce Connect", description: "CRM-integrated fax workflows" },
    { name: "Microsoft Power Automate", description: "Low-code workflow automation" },
