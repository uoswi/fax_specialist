---
const partners = [
  { name: "etherFAX", description: "Secure cloud fax network" },
  { name: "FaxCore", description: "On-premise fax server solutions" },
  { name: "RightFax", description: "Enterprise fax infrastructure" },
  { name: "Retarus", description: "Global cloud fax services" },
  { name: "eFax Enterprise", description: "High-volume cloud faxing" },
  { name: "OpenText", description: "Enterprise information management" },
];
---

<section class="py-16 bg-slate">
  <div class="max-w-[1200px] mx-auto px-6">
    <div class="text-center mb-12">
      <p class="text-indigo-light font-medium text-small uppercase tracking-wider mb-2">
        Vendor Agnostic
      </p>
      <h2 class="font-headline text-h3 text-pearl">
        I work with all the major players
      </h2>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-8">
      {partners.map((partner) => (
        <div class="flex flex-col items-center justify-center text-center group">
          <!-- Placeholder logo -->
          <div class="w-full h-12 flex items-center justify-center mb-2 opacity-60 group-hover:opacity-100 transition-opacity">
            <span class="text-pearl font-semibold text-body tracking-tight">
              {partner.name}
            </span>
          </div>
          <span class="text-steel text-xs hidden lg:block">
            {partner.description}
          </span>
        </div>
      ))}
    </div>
  </div>
</section>
