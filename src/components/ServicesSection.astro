---
const services = [
  {
    title: "On-Premise Solutions",
    description: "Legacy modernization and in-house fax infrastructure for security-first organizations that need full control.",
    href: "/services/on-premise",
    icon: "server",
    features: ["RightFax expertise", "Legacy upgrades", "Full data control"]
  },
  {
    title: "Cloud Fax Solutions",
    description: "Scalable, no-hardware fax infrastructure with global reach. Perfect for distributed teams and modern enterprises.",
    href: "/services/cloud",
    icon: "cloud",
    features: ["etherFAX certified", "99.9% uptime", "Global reach"]
  },
  {
    title: "Hybrid & Migration",
    description: "Smooth transitions from legacy to cloud with phased migration plans that minimize risk and downtime.",
    href: "/services/hybrid-migration",
    icon: "arrows",
    features: ["Zero downtime", "Phased rollout", "Risk mitigation"]
  },
  {
    title: "Automation & Integration",
    description: "Workflow automation, API integrations, and custom triggers that connect fax to your existing systems.",
    href: "/services/automation",
    icon: "cog",
    features: ["EHR/EMR integration", "Custom APIs", "Workflow automation"]
  }
];

const icons: Record<string, string> = {
  server: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01" />`,
  cloud: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z" />`,
  arrows: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />`,
  cog: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />`
};
---

<section class="py-24 lg:py-32 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-1.5 rounded-full bg-indigo-50 text-indigo font-medium text-sm mb-4">
        Services
      </span>
      <h2 class="text-3xl lg:text-4xl font-display font-bold text-gray-900 mb-4">
        Enterprise Fax Solutions
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        From legacy migrations to cloud-native deployments, I help enterprises modernize their fax infrastructure.
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid md:grid-cols-2 gap-8">
      {services.map((service, index) => (
        <a
          href={service.href}
          class="group relative bg-white rounded-2xl p-8 border border-gray-100 shadow-sm hover:shadow-xl hover:border-indigo/20 transition-all duration-300"
        >
          <!-- Icon -->
          <div class="w-14 h-14 rounded-xl bg-indigo/10 text-indigo flex items-center justify-center mb-6 group-hover:bg-indigo group-hover:text-white transition-all duration-300">
            <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons[service.icon]} />
          </div>

          <!-- Content -->
          <h3 class="text-xl font-display font-semibold text-gray-900 mb-3 group-hover:text-indigo transition-colors">
            {service.title}
          </h3>
          <p class="text-gray-600 mb-6 leading-relaxed">
            {service.description}
          </p>

          <!-- Features -->
          <div class="flex flex-wrap gap-2 mb-6">
            {service.features.map((feature) => (
              <span class="inline-flex items-center px-3 py-1 rounded-full bg-gray-100 text-gray-600 text-sm">
                {feature}
              </span>
            ))}
          </div>

          <!-- Arrow -->
          <div class="flex items-center text-indigo font-medium">
            Learn more
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </div>

          <!-- Hover gradient overlay -->
          <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-indigo/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none"></div>
        </a>
      ))}
    </div>

    <!-- View All CTA -->
    <div class="text-center mt-12">
      <a
        href="/services"
        class="inline-flex items-center gap-2 text-gray-600 hover:text-indigo font-medium transition-colors"
      >
        View all services & capabilities
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>
